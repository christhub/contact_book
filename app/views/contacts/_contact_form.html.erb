<div class="col-md-9">
  <%= form_for @contact do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: 'pull-left' %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: 'pull-left'  %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :number, class: 'pull-left'  %>
    <%= f.telephone_field :number, class: "form-control" %>
  </div>
  <%= f.submit 'Add', class: "btn btn-default pull-right" %>
  <% end %>
</div>
