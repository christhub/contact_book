<div class="col-md-9">
  <%= form_for @message do |f| %>
    <div class="form-group">
      <%= f.label :to, class: 'pull-left' %>
      <%= f.text_field :to, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :from, class: 'pull-left'  %>
      <%= f.text_field :from, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body, class: 'pull-left'  %>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit 'Go', class: "btn btn-lg btn-default pull-right" %>
  <% end %>
</div>
